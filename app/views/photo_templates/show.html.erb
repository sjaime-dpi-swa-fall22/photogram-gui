<ul>
  <li><a href="/users">Users</a></li>
  <li><a href="/photos">Photos</a></li>
</ul>

<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src=<%= @photo.image %> ></dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action ="/update_photo/<%= @photo.id %>">
      <label for="image_url">Image</label>
      <input id="image_url" type="text" name="image_url" value="<%= @photo.image %>">

      <label for="caption">Caption</label>
      <textarea id="caption" type="text" name="caption"><%= @photo.caption %></textarea>

      <button>Update photo</button>
    </form>
  
  </dd>
  <dt>Delete photo</dt>
  <dd> <a href="/delete_photo/<%= @photo.id %>">Delete this photo</a></dd>


<h2>Comments</h2>

<table border=0>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo.comments.each do |comment|%>
    <tr>
      <td><%= comment.commenter.username %></td>
      <td><%= comment.body %></td>
      <td><%= comment.created_at %></td>
    </tr>
  <% end %>

</table>

<h3>Add a new comment</h3>

<form action ="/insert_comment">
  <label for="photo_id">Photo ID</label>
  <input id="photo_id" type="text" name="photo_id" value="<%= @photo.id %>">

  <label for="author_id">Author ID</label>
  <input id="author_id" type="text" name="author_id">

  <label for="comment">Comment</label>
  <textarea id="comment" type="text" name="comment" placeholder="Enter a comment"></textarea>

  <button>Add comment</button>
</form>
